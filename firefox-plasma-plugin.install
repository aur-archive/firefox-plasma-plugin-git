post_install() {
	cat <<-EOF
        This is an experimental yet harmless Netscape-compatible plugin for all known browsers, especially Mozilla Firefox.
        Konqueror seems to be incompatible :(
	Open this file in your browser in order to check if your browser can run Plasma applets.
	--> /usr/share/firefox-plasma-plugin/plasma_example.html
	EOF
}

post_upgrade() {
	post_install
}
